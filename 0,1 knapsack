#include <bits/stdc++.h>
using namespace std;

int main() {
    int n=4;
    int m=8;
    int profit[n]={1,2,5,6};
    int weight[n]={2,3,4,5};
    int k[n+1][m+1];
    for(int i=0; i<n+1; i++){
        for(int w=0; w<m+1; w++){
            if(i==0 || w==0){
                k[i][w]=0;
            }
            else if(w<weight[i-1]){    //ekhane weight[i] na hoye i-1 hobe cz, i==0 ta amra skip koray, weight array er 0th index ta miss kore jabo, thats why.
                                        //na bujhle bolio....
                k[i][w]=k[i-1][w];
            }
            else{
                k[i][w]=max(k[i-1][w],k[i-1][w-weight[i-1]]+profit[i-1]);
            }
        }
    }

    for(int i=0; i<n+1; i++){
        for(int w=0; w<m+1; w++){
            cout<<k[i][w]<<" ";
        }
        cout<<endl;
    }

    cout<<endl;
    cout<<"max profit: "<<k[n][m];
}



